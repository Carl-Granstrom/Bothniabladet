@*This is a boxelement and supposed to show images in the centre instead of information*@
@model IEnumerable<Bothniabladet.Models.ImageModels.ImageSummaryViewModel>

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
        <div class="card" style="width: 18rem;">
            <a asp-action="Details" asp-route-id="@item.Id">
            <img src="@item.ThumbnailDataString" class="card-img-top" alt="...">
        </a>
            <div class="card-body">
              <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
              <p class="card-text">@Html.DisplayFor(modelItem => item.Section) - @Html.DisplayFor(modelItem => item.Date)<br>
                @foreach(String keyword in item.Keywords)
                {
                    <span class="badge badge-primary">
                        Flaskpost
                    </span>
                    <span class="badge badge-primary">
                        Fuskword2
                    </span>
                    <span class="badge badge-primary">
                        Franskisar
                    </span>
                }
               </p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        }
    </div>
</div>
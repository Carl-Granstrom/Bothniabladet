@model Bothniabladet.Models.ImageModels.ImageDetailViewModel

<div class="container">
    <div class="modal fade" tabindex="-1" id="EnlargeImageModal"
         data-keyboard="false">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Html.DisplayFor(model => model.Name)</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        ×
                    </button>
                </div>
                <div class="modal-body">
                    <img class="img-fluid" src="@ViewBag.ImageDataUrl" alt="@Html.DisplayFor(model => model.Name)" />
                </div>
            </div>
        </div>
    </div>
</div>
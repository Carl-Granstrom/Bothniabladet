@model Bothniabladet.Models.ImageModels.CreateImageCommand

@{
    ViewData["Title"] = "Create";

    @functions{
        public void OnGet()
        {
            //could possibly load the selection options from db here
        }
    }

}

<h1>Create</h1>

<h4>Image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"
              asp-controller="Images"
              method="post"
              enctype="multipart/form-data">
            <label asp-for="ImageData.FormFile"></label>
            <input asp-for="ImageData.FormFile" type="file" />
            <span asp-validation-for="ImageData.FormFile"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageTitle" class="control-label">Please enter the name of the image</label>
                <input asp-for="ImageTitle" class="form-control" />
                <span asp-validation-for="ImageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasePrice" class="control-label"></label>
                <input asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue" class="control-label"></label>
                <input asp-for="Issue" class="form-control" max="2030-12-31" min="1979-12-31" />
                <span asp-validation-for="Issue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <select asp-for="Section" asp-items="Model.Sections" class="form-control"></select>
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
            <div id="fields"></div>
            <button id="btnAddField">Add Keyword</button>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div><b>Keywords:</b> @ViewBag.Data</div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- JS includes -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var $fields = $('#fields');
        $('#btnAddField').click(function (e) {
            e.preventDefault();
            $('<input type="text" name="dynamicField"/><br/>').appendTo($fields);
        });
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Bothniabladet.Models.Checkout.CheckoutViewModel

<div class="container">
    <div class="modal fade" tabindex="-1" id="OpenBasketCaseModal"
         data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Lägg till bild</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        ×
                    </button>
                </div>
                <div class="modal-body">



                    <a class="align-text-bottom" asp-controller="Checkout" asp-action="Checkout">Köp</a>

                </div>
            </div>
        </div>
    </div>
</div>